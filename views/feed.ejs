<!doctype html>
<html>
<head>
    <title>GardnerGram</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="feed.css">
</head>
<body>
<div class="container">
    <a id="logoutBtn" href="/logout" class="btn btn-default btn-sm">Logout</a>
    <div id="header" class="page-header text-center">
        <h1>Feed</h1>
        <a  class="profileLink" href="/profile">Profile</a>
    </div>

    <div >

       
        <div id="individualPost" class="col-sm-6">
          <h3>Posts</h3>
          <ul class="messages">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="message">
              <a href="/post/<%= posts[i]._id %>">
                <img src="<%= posts[i].img %>" alt="">
                <h4><%= posts[i].caption %></h4>
              </a>  
               <a href="/page/<%= posts[i].postedBy %>"><%= posts[i].postedBy %></a>
               <span class="likeCount" data-id="<%= posts[i]._id %>"><%= posts[i].postLikes %></span>
               <button class="likeBtn" data-id="<%= posts[i]._id %>">Like</button>
            </li>
          <% } %>
          </ul>


</div>

<script src="main.js"></script>

</body>
</html>
