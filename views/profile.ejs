        <div id="makePostSection"class="col-sm-6">
        
          <section class="makeAPost"> 
            <h2>Make A Post</h2>
            <% if (user.local.email) { %>
              <form action="/makePost" enctype="multipart/form-data" method="POST">
                <input type="text" name="caption" placeholder="caption">
                <input type="file" name="file-to-upload">
                <button id="btn" class="submitBtn" type="submit">Submit</button>
              </form>
          </section>

          <section class="thePosts">
            <h2>Posts</h2>
            <ul class="messages">
            <% for(var i=0; i<posts.length; i++) {%>
              <li class="message">
                <a href="/post/<%= posts[i]._id %>">
                  <h4><%= posts[i].caption %></h4>
                  <img src="<%= posts[i].img %>" alt="">
                </a>  
              </li>
            <% } %>
            </ul>
          </section>

        </div>
